extends ../../layouts/default 
include ../../mixins/box-head 

block main 
    .container.my-3
        .row
            .col-12
                +box-head("Thông tin tài khoản")

                if(user.avatar)
                    img(src=user.avatar width="150px" class="mb-3")

                if(user.fullName)
                    p Họ tên: <b>#{user.fullName}</b>
                
                if(user.email)
                    p Email: <b>#{user.email}</b>

                if(user.phone)
                    p Số điện thoại: <b>#{user.phone}</b>

                p Trạng thái: 
                    span  <b>#{user.status == "active" ? "Hoạt động" : "Dừng hoạt động"}</b>

