extends ../../layouts/default.pug 

block main 
    h1(class="mb-3") Trang danh sách tài khoản 
     
    .card.mb-3 
        .card-header Danh sách 
        .card-body 
            .row 
                .col-8 
                .col-4.text-right 
                    a(
                        class="btn btn-outline-success"
                        href=`/${prefixAdmin}/accounts/create`
                    ) + Thêm mới 
            table.table.table-hover.table-sm
                thead 
                    tr 
                        th STT 
                        th Avatar
                        th Họ tên
                        th Phân quyền
                        th Email
                        th Trạng thái 
                        th Hành động
                tbody  
                    if(records)
                        each item, index in records
                            tr 
                                td #{index + 1} 
                                td 
                                    img(
                                        src=item.avatar, 
                                        alt=item.title 
                                        width="100px"
                                        height=auto 
                                    )
                                td #{item.fullname}
                                td #{item.role}
                                td #{item.email}
                                td 
                                    if(item.status == "active")
                                        a(
                                            href="javascript:;" 
                                            class="badge badge-success"
                                            data-id=item.id 
                                            status=item.status 
                                            change-status 
                                        ) Hoạt động  
                                    else 
                                        a(
                                            href="javascript:;" 
                                            class="badge badge-danger"
                                            data-id=item.id 
                                            status=item.status 
                                            change-status 
                                        ) Dừng hoạt động   
                                td 
                                    a(href=`/${prefixAdmin}/accounts/detail/${item.id}`)
                                        button(
                                            class="btn btn-secondary"
                                            button-detail 
                                        ) Xem chi tiết 
                                    a(href=`/${prefixAdmin}/accounts/edit/${item.id}`) 
                                        button(
                                            class="btn btn-warning"
                                            button-edit 
                                        ) Sửa 
                                    button(
                                        class="btn btn-danger ml-1"
                                        data-id = item.id
                                        button-delete 
                                    ) Xóa
                    else 
                        tr 
                            td(class="text-center" colspan="6") Chưa có bản ghi 