extends ../../layouts/default 

block main 
    if(user.avatar)
        img(src=user.avatar width="150px" class="mb-3")

    if(user.fullname)
        p Họ tên: <b>#{user.fullname}</b>
    
    if(user.email)
        p Email: <b>#{user.email}</b>

    if(user.phone)
        p Số điện thoại: <b>#{user.phone}</b>

    p Trạng thái: 
        span  <b>#{user.status == "active" ? "Hoạt động" : "Dừng hoạt động"}</b>
    
    if(role.title)
        p Phân quyền: <b>#{role.title}</b>

    a(
        href=`/${prefixAdmin}/my-account/edit`
        class="btn btn-primary"
    ) Chỉnh sửa thông tin 
