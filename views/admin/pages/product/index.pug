extends ../../layouts/default.pug 
include ../../mixins/pagination.pug 
include ../../mixins/filterStatus.pug 
include ../../mixins/formSearch.pug 
include ../../mixins/formChangeMulti.pug 
include ../../mixins/show-alert.pug 


block main 
    +alert-success(4000)

    h1.mb-4 #{pageTitle}

    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm 
        .card-body 
            .container 
                .row 
                    .col-6 
                        +filterStatus(filterStatus)    
                    .col-6 
                        +formSearch(keyword)

    .card.mb-3 
        .card-header Danh sách 
        .card-body 
            .row 
                .col-8 
                    +changeMulti(`/${prefixAdmin}/products/changeMulti?_method=PATCH`)
                .col-4.text-right 
                    a(
                        href="/admin/products/create"
                        class="btn btn-outline-success"
                    ) + Thêm mới 
            table.table.table-hover.table-sm(box-check)
                thead 
                    tr 
                        td 
                            input(type="checkbox"
                            name="checkAll"
                        )
                        th STT 
                        th Hình ảnh
                        th Tiêu đề 
                        th Giá
                        th Vị trí
                        th Trạng thái 
                        th Hành động
                tbody  
                    each item, index in products
                        tr 
                            td 
                                input(
                                    type="checkbox"
                                    name="id"
                                    data-id = item.id
                                )
                            td #{index + 1} 
                            td 
                                img(
                                    src=item.thumbnail, 
                                    alt=item.title 
                                    width="100px"
                                    height=auto 
                                )
                            td #{item.title}
                            td #{item.price}$
                            td 
                                input(
                                    type="number"
                                    style="width:60px"
                                    value=item.position 
                                    name="position"
                                ) 
                            td 
                                if(item.status == "active")
                                    a(
                                        href="javascript:;" 
                                        class="badge badge-success"
                                        data-id=item.id 
                                        status=item.status 
                                        change-status 
                                    ) Hoạt động  
                                else 
                                    a(
                                        href="javascript:;" 
                                        class="badge badge-danger"
                                        data-id=item.id 
                                        status=item.status 
                                        change-status 
                                    ) Dừng hoạt động   
                            td 
                                a(href=`/${prefixAdmin}/products/detail/${item.id}`)
                                    button(
                                        class="btn btn-secondary"
                                        button-detail 
                                    ) Xem chi tiết 
                                a(href=`/${prefixAdmin}/products/edit/${item.id}`) 
                                    button(
                                        class="btn btn-warning"
                                        button-edit 
                                    ) Sửa 
                                button(
                                    class="btn btn-danger ml-1"
                                    data-id = item.id
                                    button-delete 
                                ) Xóa
    
    +pagination(pagination)

    form(
        action="", 
        method="post"
        formChangeStatus 
        path=`/${prefixAdmin}/products/changeStatus`
    ) 

    form(
        action=""
        method="post"
        formDeleteOne
        path=`/${prefixAdmin}/products/delete`    
    ) 