extends ../../layouts/default
include ../../mixins/show-alert 

block main 
    if(role.permissions.includes("roles_permissions"))
        h1(class="mb-4") Phân quyền 

        div(divData=records)

        +alert-success(3000)

        div(class="text-right")
            button(
                type="submit"
                class="btn btn-primary mb-3"
                button-submit 
            ) Cập nhật 

        if(records)
            table(class="table table-hover table-sm" table-permission)
                thead 
                    tr 
                        th Tính năng 
                        for item of records 
                            th(class="text-center") #{item.title} 
                tbody 
                    tr(data-name="id" class="d-none") 
                        td 
                        each item of records
                            td(class="text-center")
                                input(type="text" value=item.id)

                    //- Danh mục sản phẩm
                    tr 
                        td(colspan="3") 
                            b Danh mục sản phẩm 
                    tr(data-name="products-category_view")
                        td Xem 
                        each item in records 
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="products-category_create")
                        td Thêm mới  
                        each item in records 
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="products-category_edit")
                        td Chỉnh sửa   
                        each item in records 
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="products-category_delete")
                        td Xóa   
                        each item in records 
                            td(class="text-center")
                                input(type="checkbox")
                    //- Hết danh mục sản phẩm

                    //- Danh sách sản phẩm
                    tr 
                        td(colspan="3") 
                            b Danh sách sản phẩm 
                    tr(data-name="products_view")
                        td Xem 
                        each item in records 
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="products_create")
                        td Thêm mới  
                        each item in records 
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="products_edit")
                        td Chỉnh sửa   
                        each item in records 
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="products_delete")
                        td Xóa   
                        each item in records 
                            td(class="text-center")
                                input(type="checkbox")
                    //- Hết danh sách sản phẩm

                    //- Nhóm quyền
                    tr 
                        td(colspan="3") 
                            b Nhóm quyền 
                    tr(data-name="roles_view")
                        td Xem 
                        each item in records 
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="roles_create")
                        td Thêm mới  
                        each item in records 
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="roles_edit")
                        td Chỉnh sửa   
                        each item in records 
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="roles_delete")
                        td Xóa   
                        each item in records 
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="roles_permissions")
                        td Phân quyền   
                        each item in records 
                            td(class="text-center")
                                input(type="checkbox")
                    //- Hết nhóm quyền
            
                    //- Tài khoản
                    tr 
                        td(colspan="3") 
                            b Tài khoản 
                    tr(data-name="accounts_view")
                        td Xem 
                        each item in records 
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="accounts_create")
                        td Thêm mới  
                        each item in records 
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="accounts_edit")
                        td Chỉnh sửa   
                        each item in records 
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="accounts_delete")
                        td Xóa   
                        each item in records 
                            td(class="text-center")
                                input(type="checkbox")
                    //- Hết tai khoan
            
            form(
                action=`/${prefixAdmin}/roles/permissions?_method=PATCH`
                method="post"
                form-change-permissions
                class="d-none"
            ) 
                input(
                    type="text"
                    name="roles"
                    class="form-control"
                )